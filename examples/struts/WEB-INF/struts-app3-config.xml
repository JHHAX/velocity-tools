<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<!--
     This is a blank Struts configuration file for a single example module,
     with commented examples of some items.

     NOTE: If you have a generator tool to create the corresponding Java classes
     for you, you could include the details in the "form-bean" declarations.
     Otherwise, you would only define the "form-bean" element itself, with the
     corresponding "name" and "type" attributes, as shown here.
-->


<struts-config>


  <form-beans>

     <!-- Struts Example Application 3 -->

     <form-bean
        name="logonForm"
        type= "examples.app3.LogonForm"/>


  </form-beans>


  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards>

    <!-- Struts Example Application 3, JSP Version -->

    <!-- Forward to welcome -->
     <forward
        name="welcome_jsp"
        path="/welcome_jsp.do"/>

    <!-- Forward to logon -->
     <forward
        name="logon_jsp"
        path="/logon_jsp.do"/>

    <!-- Forward to logoff -->
     <forward
        name="logoff_jsp"
        path="/logoff_jsp.do"/>

    <!-- Forward to source -->
     <forward
        name="logon_jsp_src"
        path="/examples/struts_app3/logon_jsp.txt"
        contextRelative="true"/>

    <!-- Struts Example Application 3, VM Version -->

    <!-- Forward to welcome -->
     <forward
        name="welcome_vm"
        path="/welcome_vm.do"/>

    <!-- Forward to logon -->
     <forward
        name="logon_vm"
        path="/logon_vm.do"/>

    <!-- Forward to logoff -->
     <forward
        name="logoff_vm"
        path="/logoff_vm.do"/>

    <!-- Forward to source -->
     <forward
        name="logon_vm_src"
        path="/examples/struts_app3/logon_vm.txt"
        contextRelative="true"/>

  </global-forwards>


  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>


    <!-- Struts Example Application 3, JSP Version -->

    <!-- Proceed to welcome page -->
    <action
        path="/welcome_jsp"
        type="org.apache.struts.actions.ForwardAction"
        parameter="/examples/struts_app3/index.jsp"/>

    <!-- Process a user logon -->
    <action
        path="/logon_jsp"
        type="org.apache.struts.actions.ForwardAction"
        name="logonForm"
        scope="request"
        validate="false"
        parameter="/examples/struts_app3/logon.jsp"/>

    <action
        path="/logonSubmit_jsp"
        type="examples.app3.LogonAction"
        name="logonForm"
        scope="request"
        validate="true"
        input="/examples/struts_app3/logon.jsp">
      <forward name="continue" path="/examples/struts_app3/index.jsp" contextRelative="true"/>
    </action>

    <!-- Process a user logoff -->
    <action
        path="/logoff_jsp"
        type="examples.app3.LogoffAction">
      <forward name="continue" path="/examples/struts_app3/index.jsp" contextRelative="true"/>
    </action>


    <!-- Struts Example Application 3, VM Version -->

    <!-- Proceed to welcome page -->
    <action
        path="/welcome_vm"
        type="org.apache.struts.actions.ForwardAction"
        parameter="/examples/struts_app3/index.vm" />

    <!-- Process a user logon -->
    <action
        path="/logon_vm"
        type="org.apache.struts.actions.ForwardAction"
        name="logonForm"
        scope="request"
        validate="false"
        parameter="/examples/struts_app3/logon.vm"/>

    <action
        path="/logonSubmit_vm"
        type="examples.app3.LogonAction"
        name="logonForm"
        scope="request"
        validate="true"
        input="/examples/struts_app3/logon.vm">
      <forward name="continue" path="/examples/struts_app3/index.vm" contextRelative="true"/>
    </action>

    <!-- Process a user logoff -->
    <action
        path="/logoff_vm"
        type="examples.app3.LogoffAction">
      <forward name="continue" path="/examples/struts_app3/index.vm" contextRelative="true"/>
    </action>

  </action-mappings>

  <message-resources parameter="examples.app3.ApplicationResources" />

</struts-config>
